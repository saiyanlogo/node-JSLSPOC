<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
		
	
	<script src="http://localhost:3000/javascripts/jquery-2.1.3.min.js"></script>	
	
  </head>
  <body> 
    <h1>{{ title }}</h1>	
	<div id="navbar">
	{{#url}}
		<a href="{{ link }}"> {{linkName}} </a> &nbsp; | &nbsp;
	{{/url}}
	</div>
	
	<div id="profile">
		<div id="profilePic">
			<img src="{{profilePic}}"></img>
		</div>
		<div id="profileDesc">
			{{profileDesc}}
		</div>
	</div>
	
	<div id="content">
		<div id='videoDiv'>
			<video id="video" src='' autoplay controls width='854' height='480' poster='{{profilePic}}'></video>
		</div>
		<div id="chatDiv">
			<ul id='chat'></ul>
			<form id='chatForm'>
				<input type='text' id='userChatMessage' name='userChatMessage' autocomplete='off' placeholder='Type your message'></input>
				<button>Send</button>
			</form>
		</div>
	</div>
	
	{{#scripts}}
		<script src="{{scriptSrc}}"></script>
	{{/scripts}}
	<script src="http://localhost:3000/socket.io/socket.io.js"></script>
	<script src="http://localhost:3000/javascripts/clientSocket.js"></script>
  </body>
</html>
